<%= stylesheet_link_tag "style.css" %>
<div class="insideapp">
    <%= render partial: "navbar/navbar"%>
    <div class="maincontainer" >
        <div class="choosebranchheader">
            <p>Pobieranie:</p>
            <%= button_to shared_path, class:"backbutton",  method: :get do %>
                <i class="fa-solid fa-arrow-left"></i>
            <% end %>
        </div>
        <div class="photosgrip">
           <div class="downloadphoto">
                <% if @photo.pic.attached? %>
                    <image src="<%=(url_for(@photo.pic))%>">
                <% end %>
                <div class="photodesc">   
                    <h3><%=@photo.name%></h3>
                    <p><%=@photo.data_dodania.strftime("%d.%m.%Y - %H:%M:%S")%></p>
                    <p><%=@photo.desc%></p>
                    <%= link_to "Pobieram", url_for(@photo.pic), download: @photo.pic %>
                </div>
            </div> 
        </div>
    </div>
</div>    



